# =============================================================================
# ARMS Platform - Frontend Environment Configuration Example
# Copy this file to .env and customize for your local setup
# =============================================================================

# API Configuration
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_WS_URL=ws://localhost:8080/ws
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_NAME=ARMS Platform
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,txt,jpg,jpeg,png,gif,zip,rar,mp4,avi,mov
REACT_APP_UPLOAD_CHUNK_SIZE=1048576

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=en
REACT_APP_TIMEZONE=UTC
REACT_APP_DATE_FORMAT=MM/DD/YYYY
REACT_APP_TIME_FORMAT=HH:mm

# Authentication Configuration
REACT_APP_JWT_STORAGE_KEY=arms_auth_token
REACT_APP_REFRESH_TOKEN_KEY=arms_refresh_token
REACT_APP_SESSION_TIMEOUT=3600000

# External Services (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_MIXPANEL_TOKEN=

# Development Configuration
REACT_APP_MOCK_API=false
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_HOT_RELOAD=true

# Performance Configuration
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_ENABLE_SERVICE_WORKER=false

# Security Configuration
REACT_APP_ENABLE_HTTPS=false
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_XSS_PROTECTION=true

# =============================================================================
# ARMS Platform - Backend Environment Configuration Example
# Copy this file to .env and customize for your local setup
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arms_platform
DB_USERNAME=postgres
DB_PASSWORD=postgres_password
DB_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# JPA/Hibernate Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT Configuration
JWT_SECRET=arms-platform-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRATION=86400000
JWT_ISSUER=arms-platform
JWT_AUDIENCE=arms-platform-users

# File Upload Configuration
MAX_FILE_SIZE=52428800
MAX_REQUEST_SIZE=52428800
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,txt,jpg,jpeg,png,gif,zip,rar,mp4,avi,mov

# AWS S3 Configuration (for production file storage)
AWS_S3_BUCKET_NAME=arms-platform-files
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=your-access-key
AWS_S3_SECRET_KEY=your-secret-key
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# MinIO Configuration (for local file storage)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=arms-platform-files

# Server Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@arms-platform.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/arms-platform.log

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Application Configuration
APP_NAME=ARMS Platform
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
